# =============================================================================
# FIXCITY - CONFIGURACIÓN GLOBAL
# =============================================================================
# Copia este archivo como .env y configura tus valores específicos

# -----------------------------------------------------------------------------
# INFORMACIÓN DEL PROYECTO
# -----------------------------------------------------------------------------
PROJECT_NAME=FixCity
PROJECT_VERSION=1.0.0
NODE_ENV=development
API_PORT=3001
ADMIN_PORT=3000

# -----------------------------------------------------------------------------
# BASE DE DATOS MONGODB
# -----------------------------------------------------------------------------
# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/fixcity_dev
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=fixcity_dev

# MongoDB Authentication (para producción)
MONGODB_USERNAME=fixcity_admin
MONGODB_PASSWORD=change_this_secure_password
MONGODB_AUTH_DATABASE=admin

# MongoDB para Docker Compose
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=change_this_password
MONGO_INITDB_DATABASE=fixcity_dev

# -----------------------------------------------------------------------------
# REDIS CACHE & SESSIONS
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password
REDIS_DB=0
REDIS_URL=redis://:change_this_redis_password@localhost:6379

# TTL para cache (en segundos)
REDIS_SESSION_TTL=3600
REDIS_CACHE_TTL=1800

# -----------------------------------------------------------------------------
# AUTENTICACIÓN JWT
# -----------------------------------------------------------------------------
# Generar con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_key_here_64_characters_minimum
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Configuración de cookies
JWT_COOKIE_NAME=fixcity_token
JWT_COOKIE_SECURE=false
JWT_COOKIE_HTTPONLY=true

# -----------------------------------------------------------------------------
# FIREBASE CONFIGURATION
# -----------------------------------------------------------------------------
# Firebase Project Settings
FIREBASE_PROJECT_ID=your-fixcity-firebase-project
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# Firebase Storage
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key

# Firebase Web Config (para frontend)
FIREBASE_WEB_API_KEY=your-web-api-key
FIREBASE_WEB_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_WEB_PROJECT_ID=your-project
FIREBASE_WEB_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_WEB_MESSAGING_SENDER_ID=123456789
FIREBASE_WEB_APP_ID=1:123456789:web:abcdef123456

# -----------------------------------------------------------------------------
# API CONFIGURACIÓN
# -----------------------------------------------------------------------------
# URLs base para diferentes entornos
API_BASE_URL=http://localhost:3001
API_VERSION=v1
API_PREFIX=/api/v1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,exp://192.168.1.100:19000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# -----------------------------------------------------------------------------
# SERVICIOS EXTERNOS
# -----------------------------------------------------------------------------
# Google Maps API (para geolocalización)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# SendGrid para emails (opcional)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@fixcity.com
SENDGRID_FROM_NAME=FixCity

# AWS S3 (alternativa a Firebase Storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=fixcity-uploads

# -----------------------------------------------------------------------------
# LOGGING Y MONITORING
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/app.log

# Sentry para error tracking (opcional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# -----------------------------------------------------------------------------
# SEGURIDAD
# -----------------------------------------------------------------------------
# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
HASH_SALT_ROUNDS=12

# Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true

# Session Security
SESSION_SECRET=your-session-secret-key
SESSION_NAME=fixcity_session
SESSION_SECURE=false

# -----------------------------------------------------------------------------
# DESARROLLO Y TESTING
# -----------------------------------------------------------------------------
# Para modo desarrollo
HOT_RELOAD=true
DEBUG_MODE=true
MOCK_EXTERNAL_APIS=false

# URLs de servicios en desarrollo
DEV_API_URL=http://localhost:3001
DEV_ADMIN_URL=http://localhost:3000
DEV_MOBILE_URL=http://192.168.1.100:19006

# Testing Database
TEST_MONGODB_URI=mongodb://localhost:27017/fixcity_test
TEST_REDIS_URL=redis://localhost:6379/1
