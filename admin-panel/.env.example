# =============================================================================
# ADMIN PANEL - VARIABLES DE ENTORNO
# =============================================================================

# -----------------------------------------------------------------------------
# CONFIGURACIÓN REACT
# -----------------------------------------------------------------------------
# URLs de API
REACT_APP_API_BASE_URL=http://localhost:3001
REACT_APP_API_VERSION=v1
REACT_APP_API_URL=http://localhost:3001/api/v1

# Configuración de la aplicación
REACT_APP_NAME=FixCity Admin
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Panel de Administración para FixCity

# -----------------------------------------------------------------------------
# FIREBASE WEB CONFIG
# -----------------------------------------------------------------------------
REACT_APP_FIREBASE_API_KEY=your-firebase-web-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:abcdef123456
REACT_APP_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase config como JSON string (alternativa)
REACT_APP_FIREBASE_CONFIG={"apiKey":"your-api-key","authDomain":"your-project.firebaseapp.com","projectId":"your-project","storageBucket":"your-project.appspot.com","messagingSenderId":"123456789","appId":"1:123456789:web:abcdef123456"}

# -----------------------------------------------------------------------------
# GOOGLE MAPS
# -----------------------------------------------------------------------------
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Configuración de mapas
REACT_APP_DEFAULT_LAT=20.9674
REACT_APP_DEFAULT_LNG=-89.5926
REACT_APP_DEFAULT_ZOOM=12
REACT_APP_MAP_STYLE=roadmap

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE LA APLICACIÓN
# -----------------------------------------------------------------------------
# Tema y UI
REACT_APP_THEME=light
REACT_APP_PRIMARY_COLOR=#1976d2
REACT_APP_SECONDARY_COLOR=#dc004e

# Configuración de paginación
REACT_APP_DEFAULT_PAGE_SIZE=20
REACT_APP_MAX_PAGE_SIZE=100

# Configuración de archivos
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# -----------------------------------------------------------------------------
# CARACTERÍSTICAS HABILITADAS
# -----------------------------------------------------------------------------
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_REAL_TIME=true

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE DESARROLLO
# -----------------------------------------------------------------------------
# Hot reload y desarrollo
FAST_REFRESH=true
GENERATE_SOURCEMAP=true
BROWSER=none

# Configuración de proxy (si no se usa nginx)
PROXY=http://localhost:3001

# -----------------------------------------------------------------------------
# ANALYTICS Y TRACKING
# -----------------------------------------------------------------------------
# Google Analytics
REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# Hotjar (opcional)
REACT_APP_HOTJAR_ID=your-hotjar-id
REACT_APP_HOTJAR_SV=6

# -----------------------------------------------------------------------------
# NOTIFICACIONES
# -----------------------------------------------------------------------------
# Push notifications
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true
REACT_APP_VAPID_PUBLIC_KEY=your-vapid-public-key

# Configuración de notificaciones
REACT_APP_NOTIFICATION_TIMEOUT=5000
REACT_APP_MAX_NOTIFICATIONS=5

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE BUILD
# -----------------------------------------------------------------------------
# Build optimizations
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=10000

# PWA Configuration
REACT_APP_ENABLE_PWA=true
REACT_APP_PWA_SHORT_NAME=FixCity Admin
REACT_APP_PWA_THEME_COLOR=#1976d2
REACT_APP_PWA_BACKGROUND_COLOR=#ffffff
