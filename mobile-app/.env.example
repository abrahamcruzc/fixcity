# =============================================================================
# MOBILE APP - VARIABLES DE ENTORNO
# =============================================================================

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE LA API
# -----------------------------------------------------------------------------
# URL del backend API
API_BASE_URL=http://192.168.1.100:3001
API_VERSION=v1
API_URL=http://192.168.1.100:3001/api/v1

# Timeouts de API
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# -----------------------------------------------------------------------------
# FIREBASE CONFIGURATION
# -----------------------------------------------------------------------------
# Android Firebase Config
FIREBASE_ANDROID_API_KEY=your-android-api-key
FIREBASE_ANDROID_APP_ID=1:123456789:android:abcdef123456
FIREBASE_PROJECT_ID=your-project
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789

# iOS Firebase Config
FIREBASE_IOS_API_KEY=your-ios-api-key
FIREBASE_IOS_APP_ID=1:123456789:ios:abcdef123456

# Firebase config como JSON (para configuración dinámica)
FIREBASE_CONFIG_ANDROID={"project_id":"your-project","project_number":"123456789","api_key":"your-android-api-key","application_id":"1:123456789:android:abcdef123456","storage_bucket":"your-project.appspot.com"}

FIREBASE_CONFIG_IOS={"project_id":"your-project","project_number":"123456789","api_key":"your-ios-api-key","application_id":"1:123456789:ios:abcdef123456","storage_bucket":"your-project.appspot.com"}

# -----------------------------------------------------------------------------
# GOOGLE MAPS
# -----------------------------------------------------------------------------
GOOGLE_MAPS_API_KEY_ANDROID=your-android-maps-api-key
GOOGLE_MAPS_API_KEY_IOS=your-ios-maps-api-key

# Configuración de mapas
DEFAULT_LATITUDE=20.9674
DEFAULT_LONGITUDE=-89.5926
DEFAULT_ZOOM=12
DEFAULT_RADIUS=5000

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE LA APP
# -----------------------------------------------------------------------------
# Información de la aplicación
APP_NAME=FixCity
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1
APP_BUNDLE_ID=com.fixcity.app

# Configuración de desarrollo
DEV_MODE=true
DEBUG_NETWORK=true
ENABLE_FLIPPER=true

# -----------------------------------------------------------------------------
# NOTIFICACIONES PUSH
# -----------------------------------------------------------------------------
# Firebase Cloud Messaging
FCM_SENDER_ID=123456789
ENABLE_PUSH_NOTIFICATIONS=true

# Configuración de notificaciones
NOTIFICATION_SOUND=default
NOTIFICATION_VIBRATION=true
NOTIFICATION_BADGE=true

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE CÁMARA Y ARCHIVOS
# -----------------------------------------------------------------------------
# Configuración de imágenes
MAX_IMAGE_SIZE=5242880
IMAGE_QUALITY=0.8
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1920

# Configuración de cámara
CAMERA_QUALITY=high
CAMERA_FLASH_MODE=auto
ALLOW_EDITING=true
SAVE_TO_PHOTOS=false

# -----------------------------------------------------------------------------
# GEOLOCALIZACIÓN
# -----------------------------------------------------------------------------
# Configuración de ubicación
LOCATION_ACCURACY=high
LOCATION_TIMEOUT=15000
LOCATION_MAX_AGE=300000
LOCATION_DISTANCE_FILTER=10

# Permisos de ubicación
REQUEST_LOCATION_ON_LAUNCH=true
BACKGROUND_LOCATION=false

# -----------------------------------------------------------------------------
# CONFIGURACIÓN DE UI/UX
# -----------------------------------------------------------------------------
# Tema y colores
PRIMARY_COLOR=#1976d2
SECONDARY_COLOR=#dc004e
ACCENT_COLOR=#ff9800
BACKGROUND_COLOR=#f5f5f5

# Configuración de navegación
ENABLE_GESTURE_NAVIGATION=true
ANIMATION_DURATION=300

# -----------------------------------------------------------------------------
# CARACTERÍSTICAS DE LA APP
# -----------------------------------------------------------------------------
# Funcionalidades habilitadas
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true

# Configuración offline
OFFLINE_STORAGE_LIMIT=50MB
SYNC_INTERVAL=300000

# -----------------------------------------------------------------------------
# DESARROLLO Y DEBUGGING
# -----------------------------------------------------------------------------
# Metro configuration
METRO_PORT=8081
METRO_HOST=localhost

# Debugging
ENABLE_LOGS=true
LOG_LEVEL=debug
ENABLE_REDUX_LOGGER=true

# Testing
ENABLE_DETOX=false
TEST_APP_ID=com.fixcity.app.test

# -----------------------------------------------------------------------------
# BUILD CONFIGURATION
# -----------------------------------------------------------------------------
# Android Build Config
ANDROID_TARGET_SDK_VERSION=33
ANDROID_MIN_SDK_VERSION=21
ANDROID_COMPILE_SDK_VERSION=33
ANDROID_BUILD_TOOLS_VERSION=33.0.0

# iOS Build Config
IOS_DEPLOYMENT_TARGET=12.0
IOS_TARGETED_DEVICE_FAMILY=1,2

# Code Push (para updates automáticos)
CODEPUSH_ENABLED=false
CODEPUSH_DEPLOYMENT_KEY_ANDROID=your-android-deployment-key
CODEPUSH_DEPLOYMENT_KEY_IOS=your-ios-deployment-key

# -----------------------------------------------------------------------------
# ANALYTICS Y TRACKING
# -----------------------------------------------------------------------------
# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX
ENABLE_GA=true

# Crashlytics
ENABLE_CRASHLYTICS=true

# Performance Monitoring
ENABLE_PERFORMANCE=true
PERFORMANCE_SAMPLING_RATE=0.1
